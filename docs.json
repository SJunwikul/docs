{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "ARES Documentation",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart"]
          },
          {
            "group": "Authentication",
            "pages": [
              "authentication/overview",
              "authentication/clerk",
              "authentication/auth0",
              "authentication/custom-oauth"
            ]
          },
          {
            "group": "TypeScript SDK",
            "pages": [
              "sdk/installation",
              "sdk/helpers",
              "sdk/basic-usage",
              "sdk/error-handling",
              "sdk/advanced-features"
            ]
          },
          {
            "group": "Examples",
            "pages": ["examples/nextjs", "examples/node", "examples/api-routes"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoints",
            "pages": ["api-reference/user", "api-reference/partner-usage"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "ARES Platform",
          "href": "https://joinares.com",
          "icon": "globe"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/Pantheon-Technologies-Inc/ares-typescript",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://joinares.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://joinares.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/pantheontech",
      "github": "https://github.com/Pantheon-Technologies-Inc",
      "linkedin": "https://linkedin.com/company/pantheon-technologies"
    }
  }
}
